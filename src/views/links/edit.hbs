<div class="container p-4">
	
		<div	class="row">

			<div class="col-md-4 mx-auto">
				<div class="card">
				<div class="card-header">
				<H1>Actualizar Sitio</H1>
				</div>

					<div class="card-body">

						<form action="/links/edit/{{links.id}}"  method="post">

							<div class="form-group">
								
								<input type="text" name="title" value="{{links.title}}" class="form-control" autofocus placeholder="Titulo" >	

							</div>
							
							<div class="form-group">
								
								<input type="url" name="url" value="{{links.url}}" class="form-control" placeholder="https://" >	

							</div>

							<div class="form-group">
								
								<textarea name="description" class="form-control" >{{links.description}}</textarea>

							</div>


							<div class="form-group">
									
									<button class="btn btn-success btn-block">Actualizar</button>
								
							</div>	

						</form>

					</div>
				</div>

			</div>

		</div>


</div>